<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <%- include('include/style'); %>
    <link href="/static/css/highlight.css" rel="stylesheet">
    <link href="/static/css/style.css" rel="stylesheet">
</head>

<body>

<%- include('include/header'); %>

<div class="container blog-content">

    <div class="row">

        <div class="col-sm-9 blog-main">

            <section class="blog-post">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="blog-post-meta">
                            <% tags.forEach(function(tag){ %>
                            <span class="label label-light label-warning"><%= tag %></span>
                            <% }); %>

                            <p class="blog-post-date pull-right">
                                <%= uploadtime %>
                            </p>
                        </div>
                        <div class="blog-post-content">
                            <h2 class="blog-post-title">
                                <%= title %>
                            </h2>
                            <%- content %>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.blog-post -->

            <%- include('include/comment'); %>

        </div>
        <!-- /.blog-main -->
        <%- include('include/article_sidebar'); %>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->

<%- include('include/footer'); %>
<%- include('include/script'); %>

<script src="/static/js/article.js"></script>

<%- include('include/fonts'); %>
</body>

</html>